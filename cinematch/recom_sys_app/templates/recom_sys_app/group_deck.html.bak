{% load static %}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group Movie Recommendations - {{ group_code }}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .movie-card {
            transition: transform 0.3s ease, opacity 0.3s ease;
            touch-action: none;
        }
        
        .movie-card.swiping {
            transition: none;
        }
        
        .movie-card.swipe-right {
            animation: swipeRight 0.5s ease-out forwards;
        }
        
        .movie-card.swipe-left {
            animation: swipeLeft 0.5s ease-out forwards;
        }
        
        @keyframes swipeRight {
            to {
                transform: translateX(500px) rotate(30deg);
                opacity: 0;
            }
        }
        
        @keyframes swipeLeft {
            to {
                transform: translateX(-500px) rotate(-30deg);
                opacity: 0;
            }
        }
        
        .like-indicator {
            opacity: 0;
            transition: opacity 0.2s;
        }
        
        .movie-card.dragging-right .like-indicator.like {
            opacity: 1;
        }
        
        .movie-card.dragging-left .like-indicator.nope {
            opacity: 1;
        }

        .match-modal {
            animation: slideUp 0.5s ease-out;
        }

        @keyframes slideUp {
            from {
                transform: translateY(100%);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body class="bg-gradient-to-br from-purple-50 to-blue-50 min-h-screen">
    <div class="container mx-auto px-4 py-8 max-w-2xl">
        <!-- Header -->
        <div class="mb-8 text-center">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">
                Group Movie Recommendations
            </h1>
            <div class="flex items-center justify-center gap-4 text-gray-600">
                <span class="bg-white px-4 py-2 rounded-lg shadow">
                    Group Code: <strong>{{ group_code }}</strong>
                </span>
                <span class="bg-white px-4 py-2 rounded-lg shadow">
                    Member: <strong id="memberCount">{{ member_count }}</strong>
                </span>
            </div>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="text-center py-20">
            <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-purple-600 mx-auto mb-4"></div>
            <p class="text-gray-600">Loading movie...</p>
        </div>

        <!-- Error State -->
        <div id="errorState" class="hidden bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg">
            <p id="errorMessage"></p>
            <button onclick="location.reload()" class="mt-4 bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">
                Reload
            </button>
        </div>

        <!-- Movie Deck Container -->
        <div id="deckContainer" class="hidden relative" style="height: 600px;">
            <!-- Movie cards will be inserted here -->
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden text-center py-20">
            <div class="text-6xl mb-4">ðŸŽ¬</div>
            <h2 class="text-2xl font-bold text-gray-700 mb-2">There are no more movies!</h2>
            <p class="text-gray-600 mb-6">You've finished watching all the recommendations.</p>
            <button onclick="loadMoreMovies()" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700">
                Load More
            </button>
        </div>

        <!-- Action Buttons -->
        <div id="actionButtons" class="hidden flex justify-center gap-6 mt-6">
            <button onclick="swipeLeft()" class="w-16 h-16 rounded-full bg-white shadow-lg flex items-center justify-center hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
            
            <button onclick="swipeRight()" class="w-16 h-16 rounded-full bg-white shadow-lg flex items-center justify-center hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
            </button>
        </div>
    </div>

    <!-- Match Notification Modal -->
    <div id="matchModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="match-modal bg-white rounded-2xl p-8 max-w-md mx-4 text-center">
            <div class="text-6xl mb-4">ðŸŽ‰</div>
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Match successful!</h2>
            <p class="text-gray-600 mb-2">All members like:</p>
            <p id="matchMovieTitle" class="text-xl font-semibold text-purple-600 mb-6"></p>
            <button onclick="closeMatchModal()" class="bg-purple-600 text-white px-8 py-3 rounded-lg hover:bg-purple-700">
                Awesome!
            </button>
        </div>
    </div>

    <script>
        // Configuration
        const GROUP_CODE = "{{ group_code }}";
        const API_BASE = "/api/groups/" + GROUP_CODE;
        
        // State
        let movies = [];
        let currentIndex = 0;
        let isAnimating = false;
        
        // DOM Elements
        const loadingState = document.getElementById('loadingState');
        const errorState = document.getElementById('errorState');
        const deckContainer = document.getElementById('deckContainer');
        const emptyState = document.getElementById('emptyState');
        const actionButtons = document.getElementById('actionButtons');
        const matchModal = document.getElementById('matchModal');

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            fetchMovieDeck();
        });

        // Fetch movie deck from API
        async function fetchMovieDeck() {
            try {
                const response = await fetch(`${API_BASE}/deck/?with_details=true&limit=20`, {
                    headers: {
                        'Authorization': 'Bearer ' + getCookie('auth_token'),
                    }
                });

                if (!response.ok) throw new Error('Failed to retrieve movie list');

                const data = await response.json();
                movies = data.movies;
                
                loadingState.classList.add('hidden');
                
                if (movies.length === 0) {
                    showEmptyState();
                } else {
                    renderMovieCards();
                    deckContainer.classList.remove('hidden');
                    actionButtons.classList.remove('hidden');
                }
            } catch (error) {
                showError(error.message);
            }
        }

        // Render movie cards
        function renderMovieCards() {
            deckContainer.innerHTML = '';
            
            // Render next 3 cards (for stacking effect)
            for (let i = Math.min(currentIndex + 2, movies.length - 1); i >= currentIndex; i--) {
                const card = createMovieCard(movies[i], i);
                deckContainer.appendChild(card);
            }
        }

        // Create a movie card element
        function createMovieCard(movie, index) {
            const zIndex = 100 - (index - currentIndex);
            const scale = 1 - (index - currentIndex) * 0.05;
            const translateY = (index - currentIndex) * 10;
            
            const card = document.createElement('div');
            card.className = 'movie-card absolute inset-0 bg-white rounded-2xl shadow-2xl overflow-hidden';
            card.style.zIndex = zIndex;
            card.style.transform = `scale(${scale}) translateY(${translateY}px)`;
            card.dataset.index = index;
            
            const posterUrl = movie.poster_path 
                ? `https://image.tmdb.org/t/p/w500${movie.poster_path}`
                : 'https://via.placeholder.com/500x750?text=No+Poster';
            
            card.innerHTML = `
                <div class="relative h-96 bg-gray-200">
                    <img src="${posterUrl}" alt="${movie.title}" class="w-full h-full object-cover" draggable="false">
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                    
                    <!-- Like/Nope Indicators -->
                    <div class="like-indicator like absolute top-8 right-8 bg-green-500 text-white px-6 py-3 rounded-lg font-bold text-xl transform rotate-12">
                        LIKE
                    </div>
                    <div class="like-indicator nope absolute top-8 left-8 bg-red-500 text-white px-6 py-3 rounded-lg font-bold text-xl transform -rotate-12">
                        NOPE
                    </div>
                </div>
                
                <div class="p-6 space-y-3">
                    <h2 class="text-2xl font-bold text-gray-900 line-clamp-2">${movie.title}</h2>
                    
                    <div class="flex items-center gap-4 text-sm text-gray-600">
                        ${movie.release_date ? `
                            <div class="flex items-center gap-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span>${new Date(movie.release_date).getFullYear()}</span>
                            </div>
                        ` : ''}
                        
                        ${movie.vote_average ? `
                            <div class="flex items-center gap-1">
                                <svg class="w-4 h-4 fill-yellow-400 text-yellow-400" viewBox="0 0 24 24">
                                    <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                                </svg>
                                <span>${movie.vote_average.toFixed(1)}</span>
                            </div>
                        ` : ''}
                    </div>

                    ${movie.genres && movie.genres.length > 0 ? `
                        <div class="flex flex-wrap gap-2">
                            ${movie.genres.slice(0, 3).map(genre => 
                                `<span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs rounded-full">${genre}</span>`
                            ).join('')}
                        </div>
                    ` : ''}

                    ${movie.overview ? `
                        <p class="text-gray-700 text-sm line-clamp-3">${movie.overview}</p>
                    ` : ''}
                </div>
            `;
            
            // Add touch/mouse events only to top card
            if (index === currentIndex) {
                addDragEvents(card);
            }
            
            return card;
        }

        // Add drag events to card
        function addDragEvents(card) {
            let startX = 0;
            let currentX = 0;
            let isDragging = false;

            const handleStart = (e) => {
                if (isAnimating) return;
                isDragging = true;
                startX = e.type.includes('mouse') ? e.clientX : e.touches[0].clientX;
                currentX = startX;
                card.classList.add('swiping');
            };

            const handleMove = (e) => {
                if (!isDragging) return;
                e.preventDefault();
                currentX = e.type.includes('mouse') ? e.clientX : e.touches[0].clientX;
                const diff = currentX - startX;
                const rotation = diff * 0.1;
                
                card.style.transform = `translateX(${diff}px) rotate(${rotation}deg)`;
                
                if (diff > 50) {
                    card.classList.add('dragging-right');
                    card.classList.remove('dragging-left');
                } else if (diff < -50) {
                    card.classList.add('dragging-left');
                    card.classList.remove('dragging-right');
                } else {
                    card.classList.remove('dragging-right', 'dragging-left');
                }
            };

            const handleEnd = () => {
                if (!isDragging) return;
                isDragging = false;
                card.classList.remove('swiping', 'dragging-right', 'dragging-left');
                
                const diff = currentX - startX;
                const threshold = 100;

                if (diff > threshold) {
                    performSwipe('like', card);
                } else if (diff < -threshold) {
                    performSwipe('dislike', card);
                } else {
                    // Reset position
                    card.style.transform = '';
                }
            };

            card.addEventListener('mousedown', handleStart);
            card.addEventListener('mousemove', handleMove);
            card.addEventListener('mouseup', handleEnd);
            card.addEventListener('mouseleave', handleEnd);
            card.addEventListener('touchstart', handleStart);
            card.addEventListener('touchmove', handleMove);
            card.addEventListener('touchend', handleEnd);
        }

        // Swipe functions
        function swipeRight() {
            if (isAnimating || currentIndex >= movies.length) return;
            const card = deckContainer.querySelector(`[data-index="${currentIndex}"]`);
            performSwipe('like', card);
        }

        function swipeLeft() {
            if (isAnimating || currentIndex >= movies.length) return;
            const card = deckContainer.querySelector(`[data-index="${currentIndex}"]`);
            performSwipe('dislike', card);
        }

        // Perform swipe animation and API call
        async function performSwipe(action, card) {
            if (isAnimating) return;
            isAnimating = true;

            // Animate card
            card.classList.add(action === 'like' ? 'swipe-right' : 'swipe-left');

            // Only send API request for likes
            if (action === 'like') {
                const movie = movies[currentIndex];
                try {
                    const response = await fetch(`${API_BASE}/swipe/like/`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + getCookie('auth_token'),
                            'X-CSRFToken': getCookie('csrftoken')
                        },
                        body: JSON.stringify({
                            tmdb_id: movie.tmdb_id,
                            movie_title: movie.title
                        })
                    });

                    if (response.ok) {
                        const data = await response.json();
                        if (data.is_match && data.match_data) {
                            showMatchModal(data.match_data.movie_title);
                        }
                    }
                } catch (error) {
                    console.error('Swipe error:', error);
                }
            }

            // Wait for animation then show next card
            setTimeout(() => {
                currentIndex++;
                isAnimating = false;

                if (currentIndex >= movies.length) {
                    showEmptyState();
                } else {
                    renderMovieCards();
                }
            }, 500);
        }

        // Show match notification
        function showMatchModal(movieTitle) {
            document.getElementById('matchMovieTitle').textContent = movieTitle;
            matchModal.classList.remove('hidden');
        }

        function closeMatchModal() {
            matchModal.classList.add('hidden');
        }

        // Show empty state
        function showEmptyState() {
            deckContainer.classList.add('hidden');
            actionButtons.classList.add('hidden');
            emptyState.classList.remove('hidden');
        }

        // Show error
        function showError(message) {
            loadingState.classList.add('hidden');
            errorState.classList.remove('hidden');
            document.getElementById('errorMessage').textContent = message;
        }

        // Load more movies
        function loadMoreMovies() {
            currentIndex = 0;
            emptyState.classList.add('hidden');
            loadingState.classList.remove('hidden');
            fetchMovieDeck();
        }

        // Utility: Get cookie
        function getCookie(name) {
            let cookieValue = null;
            if (document.cookie && document.cookie !== '') {
                const cookies = document.cookie.split(';');
                for (let i = 0; i < cookies.length; i++) {
                    const cookie = cookies[i].trim();
                    if (cookie.substring(0, name.length + 1) === (name + '=')) {
                        cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                        break;
                    }
                }
            }
            return cookieValue;
        }
    </script>
</body>
</html>