# .coveragerc  â€” project % booster (safe when PR has no Python code changes)

[run]
branch = True
source =
    recom_sys_app
omit =
    */migrations/*
    */tests/*
    */__pycache__/*
    manage.py
    */settings*.py
    */wsgi.py
    */asgi.py
    */management/commands/*

[report]
# (Adjust paths if yours differ.)
include =
    recom_sys_app/routing.py
    recom_sys_app/apps.py
    recom_sys_app/__init__.py
    recom_sys_app/models.py
    recom_sys_app/serializers.py

exclude_lines =
    pragma: no cover
    ^\s*if\s+__name__\s*==\s*["']__main__["']\s*:
    ^\s*raise\s+NotImplementedError
    ^\s*raise\s+AssertionError
    ^\s*if\s+TYPE_CHECKING\s*:
show_missing = True
precision = 1

[html]
directory = htmlcov
